---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center text-center py-20">
    <img src="/images/404.png" alt="404 Pirate" class="w-64 mb-8" />
    <h1 class="text-4xl font-bold mb-4">Arrrr! Page Not Found</h1>
    <p class="text-xl mb-8">Seems ye've sailed off the map, matey!</p>
    <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
      Back to Home Port
    </a>
  </div>
</MainLayout> 